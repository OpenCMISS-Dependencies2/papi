LIBRARY   = libpapi.a
SHLIB     = libpapi.so
SUBSTR  = power4
MSUBSTR = power4
MEMSUBSTR=aix
DESCR	= "AIX 5.1.0 or greater with POWER4"
LIBS	= static shared
TARGETS	= serial multiplex_and_pthreads smp omp
PMAPI	= /usr/pmapi
SHLIBDEPS = -L$(PMAPI)/lib -lpmapi

FLAGS	= -I$(PMAPI)/include -qmaxmem=-1 -qarch=pwr4 -qtune=pwr4 -qlanglvl=extended 
CFLAGS	= $(FLAGS) -qenum=4 -DNO_VARARG_MACRO -D_POWER4 
OPTFLAGS= -O3 -qstrict
TOPTFLAGS=
FFLAGS	= $(FLAGS) -WF,-D_POWER4
FOPTFLAGS= $(OPTFLAGS)
FTOPTFLAGS= $(TOPTFLAGS)
SMPCFLGS= -qsmp
OMPCFLGS= -qsmp=omp
LDFLAGS = -L$(PMAPI)/lib -lpmapi
ARG64	= 
CC_R	= xlc_r
CC	= xlc
CC_SHR	= xlc -G -bnoentry
MPICC	= mpcc
F77	= xlf
CPP	= xlc -E
MISCHDRS= aix.h power4_events.h
MISCSRCS= aix.c power4_events.c
MISCOBJS= aix.o power4_events.o

include Makefile.inc

power4_events.o: power4_events.c  $(HEADERS)
	$(CC) $(LIBCFLAGS) -DSUBSTRATE=\"$(SUBSTR).h\" $(OPTFLAGS) -c power4_events.c -o power4_events.o

aix.o: aix.c  $(HEADERS)
	$(CC) $(LIBCFLAGS) -DSUBSTRATE=\"$(SUBSTR).h\" $(OPTFLAGS) -c aix.c -o aix.o

native_install:

native_clean:

native_clobber:
