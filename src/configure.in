      netval="NET"
      compnts="${compnts} ${netval}" 
      compsrcs="${compsrcs} linux-net.c" 
      comphdrs="${comphdrs} linux-net.h" 
      compobjs="${compobjs} linux-net.o" 
      AC_DEFINE(HAVE_NET, 1, [system has net (ifconfig) component])
      ;;
esac
